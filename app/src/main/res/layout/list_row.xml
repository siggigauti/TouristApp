<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:minHeight="181dp">

        <ImageView
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/row_imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxHeight="100dp"
            android:maxWidth="80dp"
            android:layout_width="80dp"
            android:layout_height="90dp" />

        <Button
            android:text="See Trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nameOfTrip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/row_button" />

        <TextView
            android:text="Name Of Trip"
            android:id="@+id/row_nameOfTrip"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:layout_height="30dp"
            android:layout_width="160dp"
            android:layout_marginTop="11dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/row_imageView"
            android:layout_toEndOf="@+id/row_imageView" />

        <TextView
            android:text="30.000 ISK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_priceOfTrip"
            android:layout_above="@+id/row_endDateOfTrip"
            android:layout_alignLeft="@+id/row_button"
            android:layout_alignStart="@+id/row_button" />

        <TextView
            android:text="10.10.2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_startDateOfTrip"
            android:layout_below="@+id/row_button"
            android:layout_toRightOf="@+id/row_imageView"
            android:layout_toEndOf="@+id/row_imageView" />

        <TextView
            android:text="11.10.2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_endDateOfTrip"
            android:layout_alignBottom="@+id/row_imageView"
            android:layout_toRightOf="@+id/row_imageView"
            android:layout_toEndOf="@+id/row_imageView" />
    </RelativeLayout>
</LinearLayout>
