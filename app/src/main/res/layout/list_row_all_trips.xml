<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:minHeight="181dp">

        <ImageView
            android:id="@+id/row_imageView"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxHeight="100dp"
            android:maxWidth="80dp"
            app:srcCompat="@android:drawable/ic_menu_gallery"/>

        <TextView
            android:id="@+id/row_nameOfTrip"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/row_imageView"
            android:layout_toRightOf="@+id/row_imageView"
            android:fontFamily="sans-serif"
            android:text="Name Of Trip"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/row_priceOfTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/row_endDateOfTrip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:text="30.000 ISK"/>

        <TextView
            android:id="@+id/row_startDateOfTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/row_endDateOfTrip"
            android:layout_toEndOf="@+id/row_imageView"
            android:layout_toRightOf="@+id/row_imageView"
            android:text="10.10.2017"/>

        <TextView
            android:id="@+id/row_endDateOfTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/row_imageView"
            android:layout_toEndOf="@+id/row_imageView"
            android:layout_toRightOf="@+id/row_imageView"
            android:text="11.10.2017"/>
    </RelativeLayout>
</LinearLayout>
