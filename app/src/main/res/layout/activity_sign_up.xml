<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="is.siggigauti.touristapp.ui.SignUp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="71dp"
        android:id="@+id/SignUpUserName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/SignUpPassword"
        android:inputType="textPassword"
        android:layout_below="@+id/SignUpEmail"
        android:layout_alignLeft="@+id/SignUpEmail"
        android:layout_alignStart="@+id/SignUpEmail" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SignUpButton"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/SignUpPasswordConfirmPassword"
        android:layout_alignLeft="@+id/SignUpPasswordConfirmPassword"
        android:layout_alignStart="@+id/SignUpPasswordConfirmPassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ErrorConfirmPassword"
        android:layout_alignBaseline="@+id/SignUpPasswordConfirmPassword"
        android:layout_alignBottom="@+id/SignUpPasswordConfirmPassword"
        android:layout_alignLeft="@+id/SignUpPasswordConfirmPassword"
        android:layout_alignStart="@+id/SignUpPasswordConfirmPassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ErrorName"
        android:layout_alignBaseline="@+id/SignUpUserName"
        android:layout_alignBottom="@+id/SignUpUserName"
        android:layout_alignLeft="@+id/SignUpUserName"
        android:layout_alignStart="@+id/SignUpUserName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/SignUpEmail"
        android:hint="Email"
        android:layout_below="@+id/SignUpUserName"
        android:layout_alignLeft="@+id/SignUpUserName"
        android:layout_alignStart="@+id/SignUpUserName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/SignUpPasswordConfirmPassword"
        android:inputType="textPassword"
        android:layout_below="@+id/SignUpPassword"
        android:layout_alignLeft="@+id/SignUpPassword"
        android:layout_alignStart="@+id/SignUpPassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ErrorPassword"
        android:layout_alignBaseline="@+id/SignUpPassword"
        android:layout_alignBottom="@+id/SignUpPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ErrorEmail"
        android:layout_alignBaseline="@+id/SignUpEmail"
        android:layout_alignBottom="@+id/SignUpEmail"
        android:layout_alignLeft="@+id/SignUpEmail"
        android:layout_alignStart="@+id/SignUpEmail"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

</RelativeLayout>
